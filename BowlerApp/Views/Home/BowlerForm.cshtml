@{
}

@model Bowler

<h2>Enter Bowler's Information:</h2>
<form method="post">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="BowlerID" />

    <label asp-for="BowlerFirstName">First Name:</label>
    <input type="text" asp-for="BowlerFirstName" /><br />

    <label asp-for="BowlerMiddleInit">Middle Initial:</label>
    <input type="text" asp-for="BowlerMiddleInit" /><br />

    <label asp-for="BowlerLastName">Last Name:</label>
    <input type="text" asp-for="BowlerLastName" /><br />

    <label asp-for="BowlerAddress">Bowler's Address:</label>
    <input type="text" asp-for="BowlerAddress" /><br />

    <label asp-for="BowlerCity">City:</label>
    <input type="text" asp-for="BowlerCity" /><br />

    <label asp-for="BowlerState">State:</label>
    <input type="text" asp-for="BowlerState" /><br />

    <label asp-for="BowlerZip">Zip Code:</label>
    <input type="text" asp-for="BowlerZip" /><br />

    <label asp-for="BowlerPhoneNumber">Phone Number:</label>
    <input type="text" asp-for="BowlerPhoneNumber" /><br />

    <select class="form-select" asp-for="TeamID">
        <option value="">Select a Team</option>
        @foreach (Team t in ViewBag.Teams)
        {
            <option value="@t.TeamID">@t.TeamName</option>
        }
    </select>
    <br />

    <button type="submit">Save</button>
</form>